<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if courses}}
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                        <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="2" class="text-center"><strong>No courses found</strong></td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>